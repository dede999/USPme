<style>
  input[type=submit]{
      border-color: #fbc02d;
      background: #fbc02d;
  }
</style>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

	<!-- login -->
	<div class="pages section">
		<div class="container">
			<div class="pages-head">
				<h3>Forgot your password?</h3>
			</div>
			<div class="login">
				<div class="row">
					<form class="col s12">
						<div class="input-field">
							 <%= f.email_field :email, autofocus: true, class:"validate", placeholder:"E-mail" %>
						</div>
						<%= render "devise/shared/links" %>
							<div class="pages-head">
        				<%= f.submit "Send me reset password instructions",class:"button-default" %>
        			</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- end login -->
<% end %>


