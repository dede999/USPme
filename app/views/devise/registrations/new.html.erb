<style>
  input[type=submit]{
      border-color: #fbc02d;
      background: #fbc02d;
  }
</style>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  
  <!-- register -->
	<div class="pages section">
		<div class="container">
			<div class="pages-head">
				<h3>REGISTER</h3>
				<h6><%= devise_error_messages! %></h3>
			</div>
			<div class="register">
				<div class="row">
					<form class="col s12">
						<div class="input-field">
							<%= f.email_field :email, autofocus: true, class: 'validate',placeholder: 'E-mail' %>
						</div>
						<div class="input-field">
								<% if @minimum_password_length %>
						    	<em>(<%= @minimum_password_length %> characters minimum)</em>
						    <% end %><br />
						    <%= f.password_field :password, autocomplete: "off", class: 'validate',placeholder: 'Password' %>
						</div>
						
							<div class="input-field">
								<%= f.password_field :password_confirmation, autocomplete: "off", class: 'validate',placeholder: 'Password confirmation' %>
						</div>
						
						<p>
						
						<%- if controller_name != 'sessions' %>
						  <%= link_to "Log in", new_session_path(resource_name) %><br />
						<% end -%></p>
						
						<%= f.submit "Sign up",class:"button-default" %>
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- end register -->
<% end %>


